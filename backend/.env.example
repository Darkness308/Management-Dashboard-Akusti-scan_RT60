# RT60 Backend Configuration

# Environment
ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database (for future use)
DATABASE_URL=sqlite:///./rt60.db

# Audio Processing
MAX_AUDIO_FILE_SIZE_MB=50
SAMPLE_RATE=48000

# DIN 18041 Compliance
STRICT_MODE=true
MIN_RT60_TOLERANCE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
